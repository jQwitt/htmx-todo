doctype html
html.bg-slate-200(lang="en")
  head
    title #{name}'s Todo List
    
    meta(charset="UTF-8")
    meta(name="viewport",content="width=device-width, initial-scale=1.0") 
    meta(name="a simple todo app")

    style 
      include ../public/styles.css
    
    script(src="https://unpkg.com/htmx.org@1.9.3",integrity="sha384-lVb3Rd/Ca0AxaoZg5sACe8FJKF0tnUgR2Kd7ehUOG5GCcROv5uBIZsOqovBAcWua",crossorigin="anonymous")

  body.min-h-screen.flex.flex-col.justify-between

    include ./mixins/_button

    section.m-4
      div.flex.flex-row.justify-between.gap-2
        h1.text-4xl.font-bold #{name}'s Todo List
        +button("Refresh")
      div(id="todo-list",hx-get="/todos",hx-trigger="load") loading...

      div.flex.flex-row.justify-around.items-center.my-2.border.border-dashed.border-slate-500.rounded.p-2.bg-slate-200(class="hover:bg-slate-100 transition ease-in-out duration-200 min-h-[70px]")
        p.text-3xl.text-slate-700 +

    footer.p-5.text-center.bg-slate-300 A code jam by Jack Witt, 2023
  </body>
</html>

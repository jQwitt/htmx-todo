mixin todo(title, dueDate)
  include ./_icon
  div.group.relative.flex.flex-row.justify-start.items-center.my-2.border.border-slate-500.rounded.p-2.bg-slate-100(class="min-h-[70]")
    button.mr-2.p-0.rounded-full.opacity-0(class="min-h-[70] hover:bg-emerald-500 hover:text-slate-100 group-hover:opacity-100 ease-in-out duration-200")
      +icon('check', 'large')
    div.-translate-x-9(class="group-hover:translate-x-0 ease-in-out duration-200")
      p.text-xl.font-bold #{title}
      p.text-sml.text-slate-800 Due #{dueDate}
    button.absolute.right-1.top-1.rounded-full.opacity-0(class="min-h-[70] hover:bg-red-700 hover:text-slate-100 group-hover:opacity-100 ease-in-out duration-200")
      +icon('delete')
